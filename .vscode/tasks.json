{
    "version": "2.0.0",
    "tasks": [        
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/AspnetSpaContainer.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}/src"
            }
        },
        {
            "label": "xUnit tests",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "test",
                "${workspaceFolder}/unitTests/UnitTests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}/unitTests"
            }
        },
        {
            "label": "e2e tests",
            "command": "docker",
            "type": "shell",
            "args": [
                "exec",
                "e2e-tests-dev",
                "cypress",
                "run",
                "browser--chrome"
            ],
            "problemMatcher": "$node-sass"
        },
        {
            "label": "jest tests",
            "command": "npm",
            "type": "shell",
            "args": [
                "run-script",
                "test:unit"
            ],
            "problemMatcher": "$tsc",
            "options": {
                "cwd": "${workspaceFolder}/src/ClientApp"
            }
        },
        {
            "label": "watched run",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/src/AspnetSpaContainer.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
            ],
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}/src"
            }
        }
    ]
}
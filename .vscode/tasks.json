{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Dev Watched Build in Container",
            "command": "${workspaceFolder}/dev/watchedBuild.ps1",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "restore",
            "command": "dotnet",
            "type": "process",
            "args": [
                "restore",
                "${workspaceFolder}/src/aspnet-react-container.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
    ]
}
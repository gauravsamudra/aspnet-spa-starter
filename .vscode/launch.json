{
   // Use IntelliSense to find out which attributes exist for C# debugging
   // Use hover for the description of the existing attributes
   // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
   "version": "0.2.0",
   "configurations": [       
        {
            "name": "Dev Build (Container)",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceRoot}/dev/watchedBuild.ps1",
            "cwd": "${workspaceRoot}",
            "args": [],
            "createTemporaryIntegratedConsole": true
        },
        {
            "name": "Dev Debug (Container)",
            "type": "coreclr",
            "preLaunchTask": "Dev Watched Build in Container",
            "request": "attach",
            "processId": "${command:pickRemoteProcess}",
            "pipeTransport": {
                "pipeProgram": "docker",
                "pipeArgs": [ "exec", "-i", "aspnet-react-container.dev" ],
                "debuggerPath": "/root/vsdbg/vsdbg",
                "pipeCwd": "${workspaceRoot}/src",
                "quoteArgs": false
            },
            "sourceFileMap": {
                "/app": "${workspaceRoot}/src"
            }
        }
    ]
}